class TarotDeck:
    def __init__(self, message):
        self.message = message
        self.tr = ''

    def choose_category(self):
        if self.message == "Общее":
            self.tr = pd.read_csv("taro.csv", index_col=0)
        elif self.message == "Здоровье":
            self.tr = pd.read_csv("taro_health.csv", index_col=0)
        elif self.message == "Прошлое, настоящее, будущее":
            self.tr = pd.read_csv("taro_LifeTime.csv", index_col=0)
        elif self.message == "Любовь":
            self.tr = pd.read_csv("taro_LifeTime.csv", index_col=0)
        elif self.message == "Карьера, деньги":
            self.tr = pd.read_csv("taro_money.csv", index_col=0)
        else:
            self.tr = None

        return self.tr
